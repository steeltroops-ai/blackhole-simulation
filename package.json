{
  "name": "blackhole-simulation",
  "version": "1.0.0",
  "author": "Mayank Pratap Singh <steeltroops_ai>",
  "private": true,
  "scripts": {
    "dev": "bun run build:wasm && next dev",
    "dev:watch": "concurrently \"bun run watch:wasm\" \"next dev\"",
    "build": "bun run build:wasm && next build",
    "build:wasm": "cd physics-engine && cross-env CARGO_BUILD_JOBS=1 wasm-pack build --target web --out-dir ../public/wasm",
    "watch:wasm": "cd physics-engine && cross-env CARGO_BUILD_JOBS=1 cargo watch -i .gitignore -i \"pkg/*\" -s \"wasm-pack build --target web --out-dir ../public/wasm\"",
    "build:vercel": "bash scripts/vercel-build.sh",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "postinstall": "lefthook install",
    "clean": "rimraf .next node_modules physics-engine/target physics-engine/pkg public/wasm"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "gl-matrix": "^3.4.4",
    "lucide-react": "^0.344.0",
    "next": "14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^2.6.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.33",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/whatwg-mimetype": "^3.0.2",
    "@types/whatwg-url": "^13.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@webgpu/types": "^0.1.69",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.1.0",
    "fast-check": "^4.5.3",
    "jsdom": "^28.1.0",
    "lefthook": "^2.1.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.3",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wasm-pack": "^0.12.1"
  }
}
